<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/pages/index.css">

<div class="main-content">
  <div class="d-flex justify-content-between align-items-center mb-5">
    <h1 class="h2 fw-bold text-primary"><%= title %></h1>
    <div class="badge bg-primary rounded-pill"><%= posts.length %> ชมรม</div>
  </div>

  <% if (typeof upcomingEvents !== 'undefined' && upcomingEvents.length > 0) { %>
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h5 class="mb-3"><i class="bi bi-bell me-2"></i>กิจกรรมที่กำลังเปิดรับ (ใกล้ถึงก่อน)</h5>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>ชมรม</th>
                <th>กิจกรรม</th>
                <th>สถานที่</th>
                <th>วัน</th>
                <th>เวลา</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% upcomingEvents.forEach(e => { %>
                <tr>
                  <td><%= e.club_title %></td>
                  <td><%= e.title %></td>
                  <td><%= e.place_name %></td>
                  <td><%= e.date %></td>
                  <td><%= e.time_start %>-<%= e.time_end %></td>
                  <td>
                    <a class="btn btn-sm btn-outline-primary" href="/events/<%= e.id %>">ดูรายละเอียด</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% } %>

  <% if (posts.length > 0) { %>
    <div class="post-list">
      <% posts.forEach(post => { %>
        <article class="post-card card mb-4 shadow-sm">
          <div class="card-body">
            <h2 class="card-title mb-3">
              <a href="/posts/<%= post.id %>" class="text-decoration-none text-dark"><%= post.title %></a>
            </h2>
            <p class="card-text text-muted mb-4"><%= post.content.substring(0, 150) %>...</p>
            
            <!-- Metadata Section -->
            <div class="post-meta d-flex flex-wrap gap-4 text-muted mb-3">
              <% if (post.username) { %>
                <div class="d-flex align-items-center gap-1">
                  <i class="bi bi-person-circle"></i>
                  <%= post.username %>
                </div>
              <% } %>
              
              <% if (post.category_name) { %>
                <div class="d-flex align-items-center gap-1">
                  <i class="bi bi-tag"></i>
                  <%= post.category_name %>
                </div>
              <% } %>

              <div class="d-flex align-items-center gap-1">
                <i class="bi bi-clock"></i>
                <%= new Date(post.created_at).toLocaleString() %>
              </div>
            </div>

            <!-- Membership Status -->
            <% if (post.membership_status) { %>
              <div class="membership-status mb-3">
                <% if (post.membership_status === 'pending') { %>
                  <div class="alert alert-warning d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-clock me-2"></i>รอการอนุมัติเข้าชมรม</span>
                    <form action="/posts/<%= post.id %>/cancel-join" method="POST" class="d-inline" onsubmit="return confirm('คุณแน่ใจหรือไม่ที่จะยกเลิกการสมัคร?')">
                      <button type="submit" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-x-circle"></i> ยกเลิก
                      </button>
                    </form>
                  </div>
                <% } else if (post.membership_status === 'approved') { %>
                  <div class="alert alert-success">
                    <i class="bi bi-check-circle me-2"></i>เป็นสมาชิกแล้ว
                  </div>
                <% } %>
              </div>
            <% } %>

            <!-- Action Buttons -->
            <div class="post-actions row justify-content-end g-2">
              <div class="col-auto">
                <a href="/posts/<%= post.id %>" 
                   class="btn btn-sm btn-outline-primary d-flex align-items-center text-nowrap">
                  <i class="bi bi-eye me-2"></i>
                  ดูรายละเอียด
                </a>
              </div>
            </div>

          </div>
        </article>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info">
      <i class="bi bi-info-circle me-2"></i>
      <% if (typeof req !== 'undefined' && req.session && req.session.user) { %>
        <% if (req.session.user.role === 'admin') { %>
          คุณยังไม่ได้สร้างชมรมใดๆ
        <% } else { %>
          คุณยังไม่ได้เป็นสมาชิกของชมรมใดๆ
          <br><small class="text-muted">หรือคุณอาจมีชมรมที่สมัครแล้วรอการอนุมัติ</small>
        <% } %>
      <% } else { %>
        กรุณาเข้าสู่ระบบเพื่อดูชมรมของคุณ
      <% } %>
    </div>
  <% } %>
</div> 