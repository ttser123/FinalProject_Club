<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/main.css">

<div class="main-content">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <h1 class="h3 mb-0">กิจกรรมทั้งหมดของชมรมที่เกี่ยวข้อง</h1>
  </div>
  <div class="table-responsive">
    <div class="d-flex gap-2"></div>
    <table class="table">
      <thead>
        <tr>
          <th>ชมรม</th>
          <th>กิจกรรม</th>
          <th>สถานที่</th>
          <th>วัน</th>
          <th>เวลา</th>
          <th>สถานะรับสมัคร</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if (!events || events.length === 0) { %>
          <tr><td colspan="7" class="text-muted">ยังไม่มีกิจกรรม</td></tr>
        <% } else { %>
          <% events.forEach(e => { %>
            <tr>
              <td><%= e.club_title %></td>
              <td><%= e.title %></td>
              <td><%= e.place_name %></td>
              <td><%= e.date %></td>
              <td><%= e.time_start %>-<%= e.time_end %></td>
              <td>
                <% if (e.is_open === 1) { %>
                  <span class="badge bg-success">เปิดรับ</span>
                <% } else { %>
                  <span class="badge bg-secondary">ปิดรับ</span>
                <% } %>
              </td>
              <td>
                <a href="/events/<%= e.id %>" class="btn btn-sm btn-outline-primary">ดูรายละเอียด</a>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>


